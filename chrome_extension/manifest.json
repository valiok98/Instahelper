    {
        "manifest_version": 2,
        "name": "Instahelper",
        "version": "1.0",
        "description": "Dummy API of Instagram",
        "permissions": [
            "activeTab",
            "tabs",
            "declarativeContent",
            "storage"
        ],
        "background": {
            "scripts": [
                "./js/background/index.js"
            ],
            "persistent": false
        },
        "browser_action": {
            "default_title": "Instahelper tooltip!",
            "default_icon": {
                "16": "images/logo16.png",
                "32": "images/logo32.png",
                "48": "images/logo48.png",
                "128": "images/logo128.png"
            }
        },
        "icons": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        }
    }